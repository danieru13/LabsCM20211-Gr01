<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDataActivity">

    <EditText
        android:id="@+id/name_input"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textPersonName|textNoSuggestions"
        android:hint="@string/name_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/last_name_input"
        android:drawableLeft="@drawable/ic_baseline_person_add_alt_1_24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textPersonName|textNoSuggestions"
        android:hint="@string/last_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/gender_input_label"
        android:drawableLeft="@drawable/ic_baseline_group_24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/gender_input_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name_input"/>
    <RadioGroup
        android:id="@+id/gender_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gender_input_label"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/last_name_input">

        <RadioButton android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_male"
            android:onClick="onGenderInputRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_female"
            android:onClick="onGenderInputRadioButtonClicked"/>/>
    </RadioGroup>

    <TextView
        android:id="@+id/birth_date_input_label"
        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/birth_date_input_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_radio_group"/>

    <Button
        android:id="@+id/birth_date_input_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/birth_date_input_button"
        app:layout_constraintStart_toEndOf="@+id/birth_date_input_label"
        app:layout_constraintTop_toBottomOf="@+id/gender_radio_group"
        android:onClick="onDateInputButtonClick"/>

    <Spinner
        android:id="@+id/education_level_input"
        android:drawableLeft="@drawable/ic_baseline_school_24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birth_date_input_button" />

    <Button
        android:id="@+id/to_contact_data_activity_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:text="@string/next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="nextButtonClickHandler"/>

</androidx.constraintlayout.widget.ConstraintLayout>